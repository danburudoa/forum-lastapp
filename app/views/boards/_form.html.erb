<%= form_with model: @board,url: boards_path, local: true do |f|%>
<%= render 'shared/error_messages', model: f.object %>
<div class="field">
<%= f.label :title, "タイトルを書く" ,class: :form_message%><br />
<%= f.text_field :title, class: :form__title %>
</div>

<div class="field">
<%= f.label :text, "本文を書く" ,class: :form_message%><br />
<%= f.text_area :text, class: :form__text %>
</div>



<div class="field">
<%= f.label :image, "画像表示",class: :form_message %><br />
<%= f.file_field :image %>
</div>

<div class="actions">
<%= f.submit "保存する", class: :form__btn %>
</div>
<% end %>